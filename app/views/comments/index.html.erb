<h1><head>Comment list</head></h1>
<% if @comments.size > 0 %>
	<table border="1">
		<tr>
		<th>Description </th>
		<th>Options</th>
		</tr>
		<% for comment in @comments %>
			<tr>
				<td> <%= comment.description %></td>
				<td><%= link_to"Edit", :controller => "comments", :action => "edit", :id => comment.id %>
				<%= link_to"Delete", :controller => "comments", :action => "destroy", :id => comment.id %>
				<%= link_to"Show", :controller => "comments", :action => "show", :id => comment.id %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	No comment
<% end %>
<%= link_to "New Comment", :controller => "comments", :action => "new" %>
<%= link_to "New blogpost", :controller => "blogpost", :action => "new" %>
<%= link_to "Home", :controller => 'home',   :action => 'index' %>
<%= link_to "blogposts", :controller => "blogpost", :action => "index" %>

